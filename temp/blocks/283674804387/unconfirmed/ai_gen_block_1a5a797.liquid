{% doc %}
  @prompt
    “Design a clean clothing section with oversized bold typography arranged in stacked lines. Insert rounded-rectangle product and model photos between the words for a playful, aesthetic look. Use soft shadows, white background, balanced spacing, and a modern beauty-brand style that feels fresh, glowy, and minimal.” everyhting should be customizable from font to color to size to radius . custom image can be uploaded, it shouldn't be like one word one image it should be normal text between that two or three image section
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-clothing-section-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px 20px;
    overflow: hidden;
  }

  .ai-clothing-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
  }

  .ai-clothing-content-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.content_spacing }}px;
    align-items: {{ block.settings.text_alignment }};
  }

  .ai-clothing-text-block-{{ ai_gen_id }} {
    font-family: {{ block.settings.text_font.family }}, {{ block.settings.text_font.fallback_families }};
    font-weight: {{ block.settings.text_font.weight }};
    font-style: {{ block.settings.text_font.style }};
    font-size: {{ block.settings.font_size }}px;
    color: {{ block.settings.text_color }};
    line-height: {{ block.settings.line_height }};
    margin: 0;
    text-transform: {{ block.settings.text_transform }};
    letter-spacing: {{ block.settings.letter_spacing }}px;
    text-align: {{ block.settings.text_align }};
    max-width: 100%;
  }

  .ai-clothing-images-row-{{ ai_gen_id }} {
    display: flex;
    gap: {{ block.settings.image_gap }}px;
    justify-content: {{ block.settings.text_alignment }};
    flex-wrap: wrap;
    width: 100%;
  }

  .ai-clothing-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    border-radius: {{ block.settings.image_border_radius }}px;
    overflow: hidden;
    box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px {{ block.settings.shadow_spread }}px {{ block.settings.shadow_color }};
    flex-shrink: 0;
  }

  .ai-clothing-image-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.image_width }}px;
    height: {{ block.settings.image_height }}px;
    object-fit: cover;
  }

  .ai-clothing-image-placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.image_width }}px;
    height: {{ block.settings.image_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-clothing-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  @media screen and (max-width: 749px) {
    .ai-clothing-text-block-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.65 }}px;
    }

    .ai-clothing-image-{{ ai_gen_id }},
    .ai-clothing-image-placeholder-{{ ai_gen_id }} {
      width: {{ block.settings.image_width | times: 0.7 }}px;
      height: {{ block.settings.image_height | times: 0.7 }}px;
    }

    .ai-clothing-images-row-{{ ai_gen_id }} {
      gap: {{ block.settings.image_gap | times: 0.6 }}px;
      justify-content: center;
    }

    .ai-clothing-content-{{ ai_gen_id }} {
      gap: {{ block.settings.content_spacing | times: 0.7 }}px;
    }
  }
{% endstyle %}

<div class="ai-clothing-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-clothing-container-{{ ai_gen_id }}">
    <div class="ai-clothing-content-{{ ai_gen_id }}">
      
      {% if block.settings.text_block_1 != blank %}
        <h2 class="ai-clothing-text-block-{{ ai_gen_id }}">{{ block.settings.text_block_1 }}</h2>
      {% endif %}

      <div class="ai-clothing-images-row-{{ ai_gen_id }}">
        {% if block.settings.show_image_1 %}
          <div class="ai-clothing-image-wrapper-{{ ai_gen_id }}">
            {% if block.settings.image_1 %}
              <img
                src="{{ block.settings.image_1 | image_url: width: 800 }}"
                alt="{{ block.settings.image_1.alt | escape }}"
                class="ai-clothing-image-{{ ai_gen_id }}"
                loading="lazy"
                width="{{ block.settings.image_width }}"
                height="{{ block.settings.image_height }}"
              >
            {% else %}
              <div class="ai-clothing-image-placeholder-{{ ai_gen_id }}">
                {{ 'product-apparel-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
        {% endif %}

        {% if block.settings.show_image_2 %}
          <div class="ai-clothing-image-wrapper-{{ ai_gen_id }}">
            {% if block.settings.image_2 %}
              <img
                src="{{ block.settings.image_2 | image_url: width: 800 }}"
                alt="{{ block.settings.image_2.alt | escape }}"
                class="ai-clothing-image-{{ ai_gen_id }}"
                loading="lazy"
                width="{{ block.settings.image_width }}"
                height="{{ block.settings.image_height }}"
              >
            {% else %}
              <div class="ai-clothing-image-placeholder-{{ ai_gen_id }}">
                {{ 'product-apparel-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
        {% endif %}

        {% if block.settings.show_image_3 %}
          <div class="ai-clothing-image-wrapper-{{ ai_gen_id }}">
            {% if block.settings.image_3 %}
              <img
                src="{{ block.settings.image_3 | image_url: width: 800 }}"
                alt="{{ block.settings.image_3.alt | escape }}"
                class="ai-clothing-image-{{ ai_gen_id }}"
                loading="lazy"
                width="{{ block.settings.image_width }}"
                height="{{ block.settings.image_height }}"
              >
            {% else %}
              <div class="ai-clothing-image-placeholder-{{ ai_gen_id }}">
                {{ 'product-apparel-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
        {% endif %}
      </div>

      {% if block.settings.text_block_2 != blank %}
        <h2 class="ai-clothing-text-block-{{ ai_gen_id }}">{{ block.settings.text_block_2 }}</h2>
      {% endif %}

    </div>
  </div>
</div>

