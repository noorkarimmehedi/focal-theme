{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-ingredient-section-{{ ai_gen_id }} {
    padding: 40px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-ingredient-container-{{ ai_gen_id }} {
    max-width: 1200px;
    margin: 0 auto;
  }

  .ai-ingredient-header-{{ ai_gen_id }} {
    text-align: center;
    margin-bottom: 40px;
  }

  .ai-ingredient-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.title_size }}px;
    color: {{ block.settings.title_color }};
    margin: 0 0 12px;
  }

  .ai-ingredient-subtitle-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtitle_size }}px;
    color: {{ block.settings.subtitle_color }};
    margin: 0;
  }

  .ai-ingredient-grid-{{ ai_gen_id }} {
    display: flex;
    gap: 20px;
    overflow-x: auto;
    padding: 20px 0;
    scroll-behavior: smooth;
    -webkit-overflow-scrolling: touch;
  }

  .ai-ingredient-grid-{{ ai_gen_id }}::-webkit-scrollbar {
    height: 6px;
  }

  .ai-ingredient-grid-{{ ai_gen_id }}::-webkit-scrollbar-track {
    background: #f1f1f1;
    border-radius: 10px;
  }

  .ai-ingredient-grid-{{ ai_gen_id }}::-webkit-scrollbar-thumb {
    background: #888;
    border-radius: 10px;
  }

  .ai-ingredient-grid-{{ ai_gen_id }}::-webkit-scrollbar-thumb:hover {
    background: #555;
  }

  .ai-ingredient-item-{{ ai_gen_id }} {
    flex: 0 0 auto;
    width: 280px;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    background: #ffffff;
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
    box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity }});
    cursor: pointer;
  }

  .ai-ingredient-item-{{ ai_gen_id }}:hover {
    transform: scale(1.15);
    border-color: {{ block.settings.hover_border_color }};
    z-index: 10;
    box-shadow: 0 8px 24px rgba(0, 0, 0, 0.15);
  }

  .ai-ingredient-grid-{{ ai_gen_id }}:hover .ai-ingredient-item-{{ ai_gen_id }}:not(:hover) {
    transform: scale(0.9);
    opacity: 0.6;
  }

  .ai-ingredient-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    height: 200px;
    overflow: hidden;
  }

  .ai-ingredient-image-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.4s ease;
  }

  .ai-ingredient-item-{{ ai_gen_id }}:hover .ai-ingredient-image-{{ ai_gen_id }} {
    transform: scale(1.1);
  }

  .ai-ingredient-placeholder-{{ ai_gen_id }} {
    width: 100%;
    height: 100%;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .ai-ingredient-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-ingredient-content-{{ ai_gen_id }} {
    padding: 20px;
  }

  .ai-ingredient-name-{{ ai_gen_id }} {
    font-size: 18px;
    font-weight: 600;
    color: {{ block.settings.ingredient_title_color }};
    margin: 0 0 8px;
    transition: color 0.3s ease;
  }

  .ai-ingredient-item-{{ ai_gen_id }}:hover .ai-ingredient-name-{{ ai_gen_id }} {
    color: {{ block.settings.ingredient_title_hover_color }};
  }

  .ai-ingredient-description-{{ ai_gen_id }} {
    font-size: 14px;
    color: {{ block.settings.ingredient_description_color }};
    line-height: 1.6;
    margin: 0;
    max-height: 0;
    opacity: 0;
    overflow: hidden;
    transition: all 0.4s ease;
  }

  .ai-ingredient-item-{{ ai_gen_id }}:hover .ai-ingredient-description-{{ ai_gen_id }} {
    max-height: 200px;
    opacity: 1;
    margin-top: 8px;
  }

  .ai-ingredient-benefits-{{ ai_gen_id }} {
    font-size: 13px;
    color: {{ block.settings.ingredient_benefits_color }};
    margin: 0;
    padding: 8px 0 0;
    border-top: 1px solid #e0e0e0;
    max-height: 0;
    opacity: 0;
    overflow: hidden;
    transition: all 0.4s ease;
  }

  .ai-ingredient-item-{{ ai_gen_id }}:hover .ai-ingredient-benefits-{{ ai_gen_id }} {
    max-height: 100px;
    opacity: 1;
    margin-top: 12px;
  }

  @media screen and (max-width: 749px) {
    .ai-ingredient-item-{{ ai_gen_id }} {
      width: 240px;
    }

    .ai-ingredient-title-{{ ai_gen_id }} {
      font-size: {{ block.settings.title_size | times: 0.8 }}px;
    }

    .ai-ingredient-subtitle-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtitle_size | times: 0.9 }}px;
    }

    .ai-ingredient-image-wrapper-{{ ai_gen_id }} {
      height: 180px;
    }
  }
{% endstyle %}

<div class="ai-ingredient-section-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-ingredient-container-{{ ai_gen_id }}">
    {% if block.settings.section_title != blank or block.settings.section_subtitle != blank %}
      <div class="ai-ingredient-header-{{ ai_gen_id }}">
        {% if block.settings.section_title != blank %}
          <h2 class="ai-ingredient-title-{{ ai_gen_id }}">{{ block.settings.section_title }}</h2>
        {% endif %}
        {% if block.settings.section_subtitle != blank %}
          <p class="ai-ingredient-subtitle-{{ ai_gen_id }}">{{ block.settings.section_subtitle }}</p>
        {% endif %}
      </div>
    {% endif %}

    <div class="ai-ingredient-grid-{{ ai_gen_id }}">
      {% for i in (1..6) %}
        {% liquid
          assign image_key = 'ingredient_' | append: i | append: '_image'
          assign name_key = 'ingredient_' | append: i | append: '_name'
          assign description_key = 'ingredient_' | append: i | append: '_description'
          assign benefits_key = 'ingredient_' | append: i | append: '_benefits'

          assign ingredient_image = block.settings[image_key]
          assign ingredient_name = block.settings[name_key]
          assign ingredient_description = block.settings[description_key]
          assign ingredient_benefits = block.settings[benefits_key]
        %}

        {% if ingredient_name != blank %}
          <div class="ai-ingredient-item-{{ ai_gen_id }}">
            <div class="ai-ingredient-image-wrapper-{{ ai_gen_id }}">
              {% if ingredient_image %}
                <img
                  src="{{ ingredient_image | image_url: width: 400 }}"
                  alt="{{ ingredient_image.alt | escape }}"
                  loading="lazy"
                  width="400"
                  height="300"
                  class="ai-ingredient-image-{{ ai_gen_id }}"
                >
              {% else %}
                <div class="ai-ingredient-placeholder-{{ ai_gen_id }}">
                  {{ 'product-1' | placeholder_svg_tag }}
                </div>
              {% endif %}
            </div>
            <div class="ai-ingredient-content-{{ ai_gen_id }}">
              <h3 class="ai-ingredient-name-{{ ai_gen_id }}">{{ ingredient_name }}</h3>
              {% if ingredient_description != blank %}
                <p class="ai-ingredient-description-{{ ai_gen_id }}">{{ ingredient_description }}</p>
              {% endif %}
              {% if ingredient_benefits != blank %}
                <p class="ai-ingredient-benefits-{{ ai_gen_id }}"><strong>Benefits:</strong> {{ ingredient_benefits }}</p>
              {% endif %}
            </div>
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
</div>

