{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  {{ block.settings.text_font | font_face: font_display: 'swap' }}

  .fashion-text-{{ ai_gen_id }} {
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.section_padding }}px 20px;
  }

  .fashion-text__container-{{ ai_gen_id }} {
    max-width: {{ block.settings.max_width }}px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: {{ block.settings.line_spacing }}px;
  }

  .fashion-text__line-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: {{ block.settings.spacing }}px;
    flex-wrap: wrap;
  }

  .fashion-text__text-{{ ai_gen_id }} {
    font-family: {{ block.settings.text_font.family }}, {{ block.settings.text_font.fallback_families }};
    font-weight: {{ block.settings.text_font.weight }};
    font-style: {{ block.settings.text_font.style }};
    font-size: {{ block.settings.font_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.2;
    margin: 0;
    white-space: nowrap;
  }

  .fashion-text__box-{{ ai_gen_id }} {
    font-family: {{ block.settings.text_font.family }}, {{ block.settings.text_font.fallback_families }};
    font-weight: {{ block.settings.text_font.weight }};
    font-style: {{ block.settings.text_font.style }};
    font-size: {{ block.settings.font_size }}px;
    color: {{ block.settings.text_color }};
    line-height: 1.2;
    margin: 0;
    padding: {{ block.settings.box_padding_vertical }}px {{ block.settings.box_padding_horizontal }}px;
    border: {{ block.settings.box_border_width }}px solid {{ block.settings.box_border_color }};
    border-radius: {{ block.settings.box_border_radius }}px;
    white-space: nowrap;
  }

  .fashion-text__image-link-{{ ai_gen_id }} {
    display: block;
    text-decoration: none;
    flex-shrink: 0;
  }

  .fashion-text__image-wrapper-{{ ai_gen_id }} {
    position: relative;
    border-radius: {{ block.settings.border_radius }}px;
    overflow: hidden;
    border: {{ block.settings.border_width }}px solid {{ block.settings.border_color }};
    box-shadow: {{ block.settings.shadow_horizontal }}px {{ block.settings.shadow_vertical }}px {{ block.settings.shadow_blur }}px rgba(0, 0, 0, {{ block.settings.shadow_opacity }});
    transition: border-color 0.3s ease, transform 0.3s ease;
  }

  .fashion-text__image-link-{{ ai_gen_id }}:hover .fashion-text__image-wrapper-{{ ai_gen_id }} {
    border-color: {{ block.settings.hover_border_color }};
    transform: translateY(-2px);
  }

  .fashion-text__image-{{ ai_gen_id }} {
    display: block;
    width: {{ block.settings.image_width }}px;
    height: {{ block.settings.image_height }}px;
    object-fit: cover;
  }

  .fashion-text__placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.image_width }}px;
    height: {{ block.settings.image_height }}px;
    background-color: {{ block.settings.placeholder_color }};
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .fashion-text__placeholder-{{ ai_gen_id }} svg {
    width: 50%;
    height: 50%;
    opacity: 0.3;
  }

  @media screen and (max-width: 749px) {
    .fashion-text__text-{{ ai_gen_id }},
    .fashion-text__box-{{ ai_gen_id }} {
      font-size: {{ block.settings.font_size | times: 0.6 }}px;
    }

    .fashion-text__box-{{ ai_gen_id }} {
      padding: {{ block.settings.box_padding_vertical | times: 0.6 }}px {{ block.settings.box_padding_horizontal | times: 0.6 }}px;
    }

    .fashion-text__image-{{ ai_gen_id }},
    .fashion-text__placeholder-{{ ai_gen_id }} {
      width: {{ block.settings.image_width | times: 0.6 }}px;
      height: {{ block.settings.image_height | times: 0.6 }}px;
    }

    .fashion-text__line-{{ ai_gen_id }} {
      gap: {{ block.settings.spacing | times: 0.6 }}px;
    }

    .fashion-text__container-{{ ai_gen_id }} {
      gap: {{ block.settings.line_spacing | times: 0.6 }}px;
    }
  }
{% endstyle %}

<div class="fashion-text-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="fashion-text__container-{{ ai_gen_id }}">
    
    <!-- Line 1: TIMELESS | 50% OFF | [Image] -->
    <div class="fashion-text__line-{{ ai_gen_id }}">
      {% if block.settings.text_1 != blank %}
        <span class="fashion-text__text-{{ ai_gen_id }}">{{ block.settings.text_1 }}</span>
      {% endif %}
      
      {% if block.settings.box_1 != blank %}
        <div class="fashion-text__box-{{ ai_gen_id }}">{{ block.settings.box_1 }}</div>
      {% endif %}
      
      {% if block.settings.show_image_1 %}
        <a 
          href="{{ block.settings.image_1_link }}" 
          class="fashion-text__image-link-{{ ai_gen_id }}"
          {% if block.settings.image_1_link == blank %}aria-disabled="true" tabindex="-1"{% endif %}
        >
          <div class="fashion-text__image-wrapper-{{ ai_gen_id }}">
            {% if block.settings.image_1 %}
              <img
                src="{{ block.settings.image_1 | image_url: width: 400 }}"
                alt="{{ block.settings.image_1.alt | escape }}"
                class="fashion-text__image-{{ ai_gen_id }}"
                loading="lazy"
                width="{{ block.settings.image_width }}"
                height="{{ block.settings.image_height }}"
              >
            {% else %}
              <div class="fashion-text__placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
        </a>
      {% endif %}
    </div>

    <!-- Line 2: MODERN LOOKS (centered box) -->
    <div class="fashion-text__line-{{ ai_gen_id }}">
      {% if block.settings.box_2 != blank %}
        <div class="fashion-text__box-{{ ai_gen_id }}">{{ block.settings.box_2 }}</div>
      {% endif %}
    </div>

    <!-- Line 3: HOT & HAPPENING | [Image] -->
    <div class="fashion-text__line-{{ ai_gen_id }}">
      {% if block.settings.text_3 != blank %}
        <span class="fashion-text__text-{{ ai_gen_id }}">{{ block.settings.text_3 }}</span>
      {% endif %}
      
      {% if block.settings.show_image_3 %}
        <a 
          href="{{ block.settings.image_3_link }}" 
          class="fashion-text__image-link-{{ ai_gen_id }}"
          {% if block.settings.image_3_link == blank %}aria-disabled="true" tabindex="-1"{% endif %}
        >
          <div class="fashion-text__image-wrapper-{{ ai_gen_id }}">
            {% if block.settings.image_3 %}
              <img
                src="{{ block.settings.image_3 | image_url: width: 400 }}"
                alt="{{ block.settings.image_3.alt | escape }}"
                class="fashion-text__image-{{ ai_gen_id }}"
                loading="lazy"
                width="{{ block.settings.image_width }}"
                height="{{ block.settings.image_height }}"
              >
            {% else %}
              <div class="fashion-text__placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
        </a>
      {% endif %}
    </div>

    <!-- Line 4: STYLISH | [Image] | TRENDY -->
    <div class="fashion-text__line-{{ ai_gen_id }}">
      {% if block.settings.text_4 != blank %}
        <span class="fashion-text__text-{{ ai_gen_id }}">{{ block.settings.text_4 }}</span>
      {% endif %}
      
      {% if block.settings.show_image_4 %}
        <a 
          href="{{ block.settings.image_4_link }}" 
          class="fashion-text__image-link-{{ ai_gen_id }}"
          {% if block.settings.image_4_link == blank %}aria-disabled="true" tabindex="-1"{% endif %}
        >
          <div class="fashion-text__image-wrapper-{{ ai_gen_id }}">
            {% if block.settings.image_4 %}
              <img
                src="{{ block.settings.image_4 | image_url: width: 400 }}"
                alt="{{ block.settings.image_4.alt | escape }}"
                class="fashion-text__image-{{ ai_gen_id }}"
                loading="lazy"
                width="{{ block.settings.image_width }}"
                height="{{ block.settings.image_height }}"
              >
            {% else %}
              <div class="fashion-text__placeholder-{{ ai_gen_id }}">
                {{ 'product-1' | placeholder_svg_tag }}
              </div>
            {% endif %}
          </div>
        </a>
      {% endif %}
      
      {% if block.settings.box_4 != blank %}
        <div class="fashion-text__box-{{ ai_gen_id }}">{{ block.settings.box_4 }}</div>
      {% endif %}
    </div>

    <!-- Line 5: VIBES (centered box) -->
    <div class="fashion-text__line-{{ ai_gen_id }}">
      {% if block.settings.box_5 != blank %}
        <div class="fashion-text__box-{{ ai_gen_id }}">{{ block.settings.box_5 }}</div>
      {% endif %}
    </div>

  </div>
</div>

